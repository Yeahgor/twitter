<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Twitter", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav pull-right">
        <li><%= link_to "На рдину", root_path %></li>
        <li><%= link_to "Помогайка", help_path %></li>
        <% if signed_in? %>
        <li><%= link_to "Народ", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Управление аккаунтом <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Ваша страница", current_user %></li>
              <li><%= link_to "Инфо #{current_user.name}", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Свалить!", signout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Вход здесь!", signin_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>