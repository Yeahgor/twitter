<% provide(:title, "Edit user") %>
<h1>Захотелось перемен? Начни с себя!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Сменить имя?" %>
      <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :email, "Поменять e-mail?" %>
      <%= f.text_field :email, class: 'form-control' %>

      <%= f.label :password, "Придумать новый пароль?" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Одно дело придумать, другое вспомнить!" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Сохранить потомкам!", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails">change</a>
    </div>
  </div>
</div>